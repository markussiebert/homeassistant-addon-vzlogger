{
  "name": "vzLogger",
  "version": "1",
  "slug": "vzLogger",
  "description": "vzlogger for homeassistant",
  "arch": ["armhf", "armv7", "amd64"],
  "startup": "application",
  "boot": "auto",
  "usb": true,
  "options": {
    "cfg": null,
    "device": null
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)?",
    "device": "device(subsystem=tty)"
  },
  "ports": {
    "8088/tcp": 10080
  },
  "ports_description": {
    "8080/tcp": "vzlogger server"
  },
  "image": "ghcr.io/markussiebert/homeassistant-addon-vzlogger/{arch}:main"
}
