#!/usr/bin/with-contenv bashio
# ==============================================================================

CONFIGFILE="$(bashio::config 'configfile')"
bashio::log.info "=============================================================================="
chmod a+x /etc/services.d/vzlogger/listdevices.sh
bashio::log.info $(/etc/services.d/vzlogger/listdevices.sh)
bashio::log.info "=============================================================================="
bashio::log.info "$(cat $CONFIGFILE)"
bashio::log.info "=============================================================================="
bashio::log.info "Starting vzlogger"
/usr/local/bin/vzlogger -c $CONFIGFILE --foreground